
<div class="container col-sm-8">
  <%= form_with(model: department) do |f| %>
    <div class="form-group mb-3">
      <label for="name">Name</label>
      <%= f.text_field :name ,class: "form-control", placeholder: "Enter your name" , id:"name" %>
    </div>
    <div class="form-group mb-3">
      <label for="location">Location</label>
      <%= f.text_field :location ,class: "form-control", placeholder: "Enter your location" , id:"location" %>
    </div>
    <div class="d-flex">
    <%= f.submit 'Submit' ,class:"btn btn-primary btn-sm m-2" %>
  <% end %>

  <%= button_to "Back", {:controller => "departments", :action => "index" } , :method=>:get, class:"btn btn-outline-secondary btn-sm m-2"%>
   </div>
</div>
