<div class="card shadow">
  <div class="card-header">
    <h2 class="card-title text-center">Sign Up Form</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "employees/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-sm-6 mb-3 mb-sm-0">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Personal Details</h5>
              <div class="form-with mb-2">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
              <div class="form-with mb-2">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
              <div class="form-with mb-2">
                <%= f.label :date_of_birth %>
                <%= f.date_field :date_of_birth, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Details For Company</h5>
              <div class="form-with mb-2">
                <%= f.label :department_id %>
                <%= f.number_field :department_id, class: "form-control" %>
              </div>
              <div class="form-with mb-2">
                <%= f.label :employee_id %>
                <%= f.number_field :employee_id, class: "form-control" %>
              </div>
              <div class="form-with mb-2">
                <%= f.label :address %>
                <%= f.text_field :address, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6 mt-3 mb-3 mb-sm-0">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Account Details</h5>
              <div class="form-with mb-2">
                <%= f.label :aadhar %>
                <%= f.number_field :aadhar, class: "form-control" %>
              </div>
              <div class="form-with mb-2">
                <%= f.label :pancard %>
                <%= f.text_field :pancard, class: "form-control" %>
              </div>
              <div class="form-with mb-2">
                <%= f.label :mobile_no %>
                <%= f.number_field :mobile_no, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6 mt-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Employee Login Credentials</h5>
              <div class="form-with mb-2 ">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="form-with mb-2 ">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="form-with mb-2 ">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>
              <%= render "employees/shared/links" %>
            </div>
          </div>
        </div>
      </div>     
    <% end %>
  </div>
</div>