<%= form_for @leave do |f| %>
  <div class="form-group">
    <%= f.label :leave_type, 'Leave Type' %>
    <%= f.text_field :leave_type, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, 'Start Date' %>
    <%= f.date_field :start_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, 'End Date' %>
    <%= f.date_field :end_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :reason, 'Reason' %>
    <%= f.text_area :reason, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :duration, 'Duration' %>
    <%= f.text_field :duration, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :submission_date, 'Submission Date' %>
    <%= f.date_field :submission_date, class: 'form-control' %>
  </div>

  <%= f.submit 'Submit Leave Request', class: 'btn btn-primary mt-4' %>
<% end %>
