

  <table class="table table-hover mt-5">
    <thead class="table table-dark">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Action </th>
      </tr>
    </thead>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.location %></td>
        <td>
          <%= link_to "Edit", edit_department_path(department), class:"btn btn-primary btn-sm" %>
            
          <%= link_to "Show", department_path(department), class:"btn btn-info btn-sm" %>
           
          <%= link_to "Delete", department_path(department),data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{department.name} department?"}, class:"btn btn-danger btn-sm" %>
          
        </td>
      </tr>
    <% end %>
  </table>
  <%= button_to 'New Department', {:controller => "departments", :action => "new" } , :method=>:get, class:"btn btn-primary" %>
